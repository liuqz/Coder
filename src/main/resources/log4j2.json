{
  "configuration": {
    "name": "log4j2",
    "properties": {
      "property": {
        "name":"fileName",
        "value":"target/logs/log4j2.log"
      }
    },
    "appenders": {
      "Console": {
        "name":"Console",
        "target":"SYSTEM_OUT",
        "PatternLayout": {
          "pattern":"%m%n"
        }
      },
      "RollingFile": {
        "name":"File",
        "fileName":"${fileName}",
        "filePattern":"target/logs/test1-%i.log.gz",
        "PatternLayout": {
          "pattern":"[%-5p] %d{yyyy-MM-dd HH:mm:ss.SSS} %l - %m%n"
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size":"1 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max":"10"
        }
      }
    },
    "loggers": {
      "root": {
        "level":"debug",
        "appender-ref": [{
          "ref":"Console"
        },
        {
          "ref":"File"
        }]
      }
    }
  }
}